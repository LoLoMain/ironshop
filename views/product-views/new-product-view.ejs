<h2>Add a Product</h2>



<%# action will connect step 1 to step 2%>
<%# this post/products route is separate from and get/products route and they are only connected by the DB %>
<form action="/products" method="post">

  <% if (typeof nameValidationError ==='object'){ %>
  <p class="error"> <%= nameValidationError.message %> </p>
   <% } %>

  <label for="product-name-input"> Name of Product</label>
  <input id="product-name-input" type="text" name="productName">
  <br>                                <%# req.body.productName %>

  <% if (typeof priceValidationError ==='object'){ %>
  <p class="error"> <%= priceValidationError.message %> </p>
   <% } %>

  <label for="product-price-input"> Price </label>
  <input id="product-price-input" type="number" step="0.01" name="productPrice">
  <br>                                               <%# req.body.productPrice %>

  <label for="product-image-input"> Image URL </label>
  <input id="product-image-input" type="text" name="productImageUrl">
  <br>                                        <%# req.body.productImageUrl %>

  <label for="product-description-input"> Description</label>
  <textarea id="product-description-input" type="text" name="productDescription">
  </textarea>                                   <%# req.body.productDescription %>
  <br>

  <button type="submit" name="button"> Add this Product</button>

</form>
